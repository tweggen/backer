<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YourBacker"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
        x:Class="YourBacker.TransferWindow"
        x:DataType="local:TransferManager"
        Title="File Transfers"
        Height="500" Width="650"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Heading -->
        <TextBlock Grid.Row="0"
                   Text="Active File Transfers"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="10,10,10,5"/>

        <!-- Overall Progress Panel -->
        <Border Grid.Row="1"
                Margin="10,5,10,10"
                Background="#30808080"
                CornerRadius="6"
                Padding="12"
                IsVisible="{Binding OverallProgress.HasActiveTransfers}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Time remaining: " Opacity="0.7"/>
                        <TextBlock Text="{Binding OverallProgress.EtaFormatted}"
                                   FontWeight="SemiBold"
                                   FontSize="14"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="{Binding OverallProgress.SpeedFormatted}"
                                   Opacity="0.7"/>
                    </StackPanel>
                </Grid>

                <ProgressBar Grid.Row="1"
                             Minimum="0"
                             Maximum="100"
                             Value="{Binding OverallProgress.ProgressPercent}"
                             Height="12"
                             CornerRadius="6"
                             Margin="0,0,0,8"/>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="{Binding OverallProgress.BytesFormatted}"
                               Opacity="0.7"
                               FontSize="12"/>

                    <TextBlock Grid.Column="1"
                               Text="{Binding OverallProgress.FilesFormatted}"
                               Opacity="0.7"
                               FontSize="12"
                               Margin="0,0,10,0"/>

                    <TextBlock Grid.Column="2"
                               Text="{Binding OverallProgress.Errors, StringFormat={}{0} errors}"
                               Foreground="#FF6B6B"
                               FontSize="12"
                               IsVisible="{Binding OverallProgress.Errors}"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Job list -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      Margin="10,0,10,10">
            <ItemsControl ItemsSource="{Binding Jobs}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="local:JobViewModel">
                        <Border Margin="0,4"
                                Background="#20808080"
                                CornerRadius="6"
                                Padding="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Row 0: Job header + Abort button -->
                                <Grid Grid.Row="0" Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="{Binding HeaderText}"
                                               FontWeight="SemiBold"
                                               FontSize="13"
                                               TextTrimming="CharacterEllipsis"
                                               ToolTip.Tip="{Binding HeaderText}"/>

                                    <Button Grid.Column="1"
                                            Content="Abort"
                                            Click="OnAbortClicked"
                                            Tag="{Binding HannibalJobId}"
                                            Padding="8,2"
                                            FontSize="11"
                                            Foreground="#FF6B6B"
                                            Background="Transparent"
                                            BorderBrush="#FF6B6B"
                                            BorderThickness="1"
                                            CornerRadius="3"/>
                                </Grid>

                                <!-- Row 1: Status text (when no active transfers) -->
                                <TextBlock Grid.Row="1"
                                           Text="{Binding StatusText}"
                                           FontStyle="Italic"
                                           Opacity="0.6"
                                           FontSize="12"
                                           Margin="0,0,0,4"
                                           IsVisible="{Binding StatusText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

                                <!-- Row 2: Per-job progress bar -->
                                <ProgressBar Grid.Row="2"
                                             Minimum="0"
                                             Maximum="100"
                                             Value="{Binding Progress.ProgressPercent}"
                                             Height="6"
                                             CornerRadius="3"
                                             Margin="0,0,0,4"
                                             IsVisible="{Binding Progress.HasActiveTransfers}"/>

                                <!-- Row 3: Nested file transfers -->
                                <ItemsControl Grid.Row="3"
                                              ItemsSource="{Binding Transfers}"
                                              Margin="0,0,0,2">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="local:FileTransferViewModel">
                                            <Border Margin="0,1"
                                                    Padding="6,3">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <Grid Grid.Row="0" Margin="0,0,0,2">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0"
                                                                   Text="{Binding SourcePath}"
                                                                   FontSize="11"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   ToolTip.Tip="{Binding SourcePath}"/>

                                                        <StackPanel Grid.Column="1"
                                                                    Orientation="Horizontal"
                                                                    Margin="10,0,0,0">
                                                            <TextBlock Text="{Binding Progress, StringFormat={}{0:F1}%}"
                                                                       FontSize="11"/>
                                                            <TextBlock Text=" - " Opacity="0.6" FontSize="11"/>
                                                            <TextBlock Text="{Binding SpeedFormatted}" Opacity="0.6" FontSize="11"/>
                                                        </StackPanel>
                                                    </Grid>

                                                    <ProgressBar Grid.Row="1"
                                                                 Minimum="0"
                                                                 Maximum="100"
                                                                 Value="{Binding Progress}"
                                                                 Height="4"
                                                                 CornerRadius="2"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Row 4: Errors section -->
                                <StackPanel Grid.Row="4"
                                            Margin="0,4,0,0"
                                            IsVisible="{Binding ErrorCount}">
                                    <TextBlock Text="{Binding ErrorCount, StringFormat={}{0} error(s)}"
                                               Foreground="#FF6B6B"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,2"/>
                                    <ItemsControl ItemsSource="{Binding Errors}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}"
                                                           Foreground="#FF6B6B"
                                                           FontSize="11"
                                                           TextWrapping="Wrap"
                                                           Margin="8,1,0,1"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Empty state message -->
        <TextBlock Grid.Row="2"
                   Text="No active jobs"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Opacity="0.5"
                   FontSize="14"
                   IsVisible="{Binding IsEmpty}"/>
    </Grid>
</Window>
