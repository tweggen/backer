<Window x:Class="BackerControl.TransferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:BackerControl"
        mc:Ignorable="d"
        Title="File Transfers" Height="400" Width="600">
    <Grid>
        <!-- Bind to Transfers collection in DataContext -->
        <ItemsControl ItemsSource="{Binding Transfers}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <ProgressBar Minimum="0" Maximum="100"
                                     Value="{Binding Progress}" Height="20">
                            <ProgressBar.ToolTip>
                                <StackPanel>
                                    <TextBlock Text="{Binding SourcePath}" />
                                    <TextBlock Text="{Binding DestinationPath}" />
                                    <TextBlock Text="{Binding Speed}" />
                                    <TextBlock Text="{Binding Size}" />
                                    <TextBlock Text="{Binding State}" />
                                </StackPanel>
                            </ProgressBar.ToolTip>
                        </ProgressBar>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
