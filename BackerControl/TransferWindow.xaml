<Window x:Class="BackerControl.TransferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:BackerControl"
        mc:Ignorable="d"
        Title="File Transfers" Height="400" Width="600">
    <Grid>
        <!-- Bind to Transfers collection in DataContext -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Transfers}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <ProgressBar Minimum="0" Maximum="100"
                                         Value="{Binding Progress}" Height="20">
                                <ProgressBar.ToolTip>
                                    <StackPanel>
                                        <TextBlock Text="{Binding SourcePath}" />
                                        <TextBlock Text="{Binding Speed, StringFormat={}{0} b/s}" />
                                        <TextBlock Text="{Binding Size, StringFormat={}{0} Bytes}" />
                                        <TextBlock Text="{Binding State}" />
                                    </StackPanel>
                                </ProgressBar.ToolTip>
                            </ProgressBar>
                            <TextBlock HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Foreground="Black"
                                       FontWeight="Bold">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{1}% - {0}">
                                        <Binding Path="SourcePath"/>
                                        <Binding Path="Progress"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
