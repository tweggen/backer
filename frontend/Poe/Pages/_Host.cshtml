@page "/_Host"
@using Poe.Components

@namespace Poe.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
    var basePath = Environment.GetEnvironmentVariable("ASPNETCORE_BASEPATH") ?? "/";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="@basePath"/>
    <link rel="stylesheet" href="@($"{basePath}/lib/bootstrap/dist/css/bootstrap.min.css")"/>
    <link rel="stylesheet" href="@($"{basePath}/app.css")"/>
    <link rel="stylesheet" href="@($"{basePath}/Poe.styles.css")"/>
    <link rel="icon" type="image/png" href="@($"{basePath}/favicon.png")"/>
    <HeadOutlet />
</head>
<body>
<app>
    <component type="typeof(App)" render-mode="ServerPrerendered" />
</app>
<script src="@($"{basePath}/_framework/blazor.server.js")"></script>
</body>
</html>